{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="my-3">{{ article.titre }}</h1>
        <p>Créer le <span class="badge bg-primary">{{ article.createdAt|date("d/m/Y") }}</span></p>
        <p>Catégorie <a href="{{ path('app_categorie_slug' ,{'slug': article.categorie.slug}) }}"><span class="badge bg-primary">{{ article.categorie.titre }}</span></a></p>
        <h3>Contenue</h3>
            <p>{{ article.contenu }}</p>
{% endblock %}