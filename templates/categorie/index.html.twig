{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1 class="my-3">Liste des cat√©gories</h1>
    <ul class="list-group mb-5">
        {% for categorie in categories %}
            <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                {{ categorie.categorie.titre }}
                ({{ categorie.nombreArticle }}
                {% if categorie.nombreArticle < 2 %}
                    article)
                {% else %}
                    articles)
                {% endif %}
                <a class="btn btn-primary" href="{{ path('app_categorie_slug' ,{'slug': categorie.categorie.slug}) }}" role="button">Voir</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
